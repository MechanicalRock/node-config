{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2018",
    "outDir": ".build",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "lib": [
      "es2016",
      "es2017"





    ]
  },
  "rootDirs": [
    "./"
  ],
  "include": [
    "src",
    "spec",
    "lambda",
    "src/*.js",
    "lambda/*.js"
  ],
  "exclude": [
    "node_modules",
    ".build"
  ]
}